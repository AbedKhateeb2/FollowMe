<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="horizontal"
    android:baselineAligned="false">


    <com.facebook.widget.ProfilePictureView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"

        android:id="@+id/friend_picture"
        android:layout_alignParentLeft="true"
        facebook:preset_size="small"
         />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/friend_name"
        android:text="sssssssss"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="32dp"
        android:layout_alignBaseline="@+id/check_box"
        android:layout_alignBottom="@+id/check_box"
        android:layout_toEndOf="@+id/friend_picture" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check_box"
        android:layout_alignTop="@+id/friend_picture"
        android:layout_alignParentEnd="true" />


</RelativeLayout>